#!/bin/sh

g++ -std=c++11 -c ./src/EODRecord.cpp -o ./src/EODRecord.o
g++ -std=c++11 -c ./src/SalesOrderRecord.cpp -o ./src/SalesOrderRecord.o
g++ -std=c++11 -c ./src/CustomerRecord.cpp -o ./src/CustomerRecord.o
g++ -std=c++11 -c ./src/OrderProcessor.cpp -o ./src/OrderProcessor.o

g++ -std=c++11 -o ordering ./src/ordering.cpp ./src/OrderProcessor.o ./src/CustomerRecord.o ./src/SalesOrderRecord.o \
                           ./src/EODRecord.o

rm ./src/OrderProcessor.o ./src/CustomerRecord.o ./src/SalesOrderRecord.o ./src/EODRecord.o
